            print("Alert shows: " + alert.text)
            alert.accept()

        url = "https://www.ycs.or.kr/fmcs/4"
        driver.get(url)

        select_field = Select(driver.find_element(By.CSS_SELECTOR, "#center"))
        select_field.select_by_value("YCS04")
        time.sleep(2)

        wait = WebDriverWait(driver, 3)
        
        reservations = {}
        # 5월에 대한 코트 예약 조회
